<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="br.com.denuncia.SendReportActivity">

    <ImageView
        android:id="@+id/send_photo"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:scaleType="centerCrop"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <EditText
            android:id="@+id/send_title"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:hint="Título da denúncia"
            android:maxLines="1"
            android:layout_margin="@dimen/view_margin"
            android:singleLine="true"
            android:lines="1"
            android:scrollHorizontally="true"
            android:ellipsize="end"/>

        <EditText
            android:id="@+id/send_description"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:hint="Descrição da denúncia"
            android:layout_margin="@dimen/view_margin" />

        <br.com.denuncia.ui.CustomTextView
            android:id="@+id/send_button"
            textSize="18sp"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="#000077"
            android:gravity="center"
            android:text="Enviar denúncia"
            android:textAllCaps="true"
            android:textColor="@android:color/white"
            app:typeface="bold" />

    </LinearLayout>

</LinearLayout>
